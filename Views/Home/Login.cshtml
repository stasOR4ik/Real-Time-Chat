@{
    ViewData["Title"] = "Login";
}
@if (ViewData["ErrorMessage"] != null)
 {
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
 }

<form method="post">
    <div class="form-group row">
        <div class="col-2 text-right">
            <label for="login" class="col-form-label font-weight-bold">Login</label>
        </div>
        <div class="col-6 col-lg-3">
            <input class="form-control" id="login" name="login" placeholder="Enter login">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 text-right">
            <label for="password" class="col-form-label font-weight-bold">Password</label>
        </div>
        <div class="col-6 col-lg-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
    </div>
    <div class="row">
        <div class="col-2 offset-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>