@{
    ViewData["Title"] = "Login";
}
@{ if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["ErrorMessage"]
        </div>
    }
    if (ViewData["SuccessfulRegistration"] != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewData["SuccessfulRegistration"]
        </div>
        ViewData["SuccessfulRegistration"] = null;
    }
}
<form method="post">
    <div class="form-group row">
        <label for="login" class="col-2 col-form-label">Login</label>
        <input class="form-control col-8"  id="login" name="login" placeholder="Enter login">
    </div>
    <div class="form-group row">
        <label for="password" class="col-2">Password</label>
        <input type="password" class="form-control col-8" id="password" name="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

